<section
  id="hero"
  class="relative w-full min-h-screen flex flex-col justify-center px-10 md:px-20 lg:px-40 bg-gradient-to-t from-white to-gray-light"
>
  <div
    class="flex flex-col md:flex-row lg:flex-row justify-between items-center mt-[120px]"
  >
    <div class="fadeInLeft flex flex-col gap-2 w-full md:w-[45%] lg:w-[45%]">
      <h2 class="text-blue-dark text-4xl lg:text-6xl md:text-4xl font-black">
        Venta y colocación de cristales para automotores
      </h2>
      <span class="text-slate-500 lg:text-2xl tracking-widest">
        +24 años en la industria. Trabajamos con todas las marcas.
      </span>
      <a
        href="#contact"
        class="primary-button text-font-family text-center mt-8 w-full md:w-fit lg:w-fit"
      >
        Cotizá ahora
      </a>
    </div>
    <img
      src="/images/trucks.png"
      alt="Vista de camiones con parabrisas nuevos a las afueras del local"
      aria-label="Camiones con parabrisas nuevos"
      class="hidden md:block lg:block object-cover w-[45%] custom-shadow fadeInRight"
      loading="lazy"
    />
  </div>
</section>
