---
const { src, alt, title, description } = Astro.props;
---

<article
  class="w-xs h-50 md:h-80 lg:h-80 relative overflow-hidden rounded-lg shadow-md transition hover:shadow-lg"
>
  <img
    alt={alt}
    src={src}
    class="absolute inset-0 h-full w-full object-cover"
  />
  <div
    class="relative bg-gradient-to-b from-transparent to-black/90 h-full w-full flex items-end"
  >
    <div class="p-4 sm:p-6 h-fit">
      <h3 class="mt-0.5 text-lg text-white font-bold">
        {title}
      </h3>
      <p class="mt-2 line-clamp-3 text-sm/relaxed text-white/95">
        {description}
      </p>
    </div>
  </div>
</article>
