---
import { SEO } from "astro-seo";
import { ClientRouter } from "astro:transitions";
import "@styles/global.css";

interface Props {
  className?: string;
  title?: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  site?: string;
  alt?: string;
}

const {
  className = "",
  title = "Parabrisas Norte Córdoba",
  description = "Cristales para automotores en Córdoba",
  canonical = "https://www.parabrisasnortecba.com.ar",
  ogImage = "/images/logo.webp",
  site = "https://www.parabrisasnortecba.com.ar",
  alt = "Parabrisas Norte Córdoba - Cristales para Automotores",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap.xml" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Parabrisas Norte" />
    <meta
      name="keywords"
      content="parabrisas norte, parabrisas, parabrisas en cordoba, cambiar parabrisas, cambiar vidrios del auto"
    />
    <SEO
      title={title}
      description={description}
      canonical={canonical}
      noindex={false}
      nofollow={false}
      openGraph={{
        basic: {
          title,
          type: "website",
          image: ogImage,
          url: canonical,
        },
        image: {
          alt,
          width: 1200,
          height: 630,
          url: ogImage,
        },
        optional: {
          siteName: "Parabrisas Norte",
          locale: "es_AR",
          description,
        },
      }}
      twitter={{
        card: "summary_large_image",
        title,
        description,
        image: ogImage,
        imageAlt: alt,
        site,
        creator: "Parabrisas Norte",
      }}
      extend={{
        link: [{ rel: "icon", href: "/images/logo.webp" }],
      }}
    />
    <ClientRouter />
    <script type="module" src="/scripts/init.js"></script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
